---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="flex grow flex-auto bg-[url(../img/Home_bg.jpg)] bg-cover">
        <div class="flex flex-col w-full px-6 bg-[#cfe8fc80]">
            <div class="max-w-[800px] m-10 p-6 self-center text-white font-raiders bg-[#000000b3]">
                <h6 class="mt-3 mb-6 text-2xl font-bold text-center">
                    Trainingsplätze
                </h6>
                <p class="mb-6 text-sm text-center">
                    Je nach Jahreszeit, Witterung und Verfügbarkeit trainieren wir auf folgenden Plätzen
                </p>
                <table>
                    <thead>
                        <tr class="border-b">
                            <th class="p-7">Was</th>
                            <th class="p-7">Wo</th>
                            <th class="p-7">Google Maps</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b">
                            <td class="p-7">
                                <div class="flex flex-col items-center justify-center">
                                    Hallentraining
                                </div>
                            </td>
                            <td class="p-7">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="font-semibold">Sportgymnasium</div>
                                    <div>Gießhüblerstraße 37-39</div>
                                    <div>2344 Maria Enzersdorf</div>
                                </div>
                            </td>
                            <td class="p-7">
                                <div class="flex flex-col items-center justify-center">
                                    <a class="h-10 w-10" href="https://maps.app.goo.gl/yo5KX5vPjPitxveD7">
                                        <img class="h-10 w-10" src="/Google_Maps_icon.svg" alt="Google Maps Link Sportgymnasium Maria Enzersdorf"/>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="p-7">
                                <div class="flex flex-col items-center justify-center">
                                    Outdoortraining
                                </div>
                            </td>
                            <td class="p-7">
                                <div class="flex flex-col gap-8">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="font-semibold">ASK Eichkogel</div>
                                        <div>Doktor Karl Renner Straße 11b</div>
                                        <div>2353 Guntramsdorf</div>
                                    </div>
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="font-semibold">ÖTB</div>
                                        <div>Dr. Karl Giannoni Gasse 18</div>
                                        <div>2340 Mödling</div>
                                    </div>
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="font-semibold">SEV Isovolta</div>
                                        <div>Isovoltastraße 45</div>
                                        <div>2355 Wr. Neudorf</div>
                                    </div>
                                </div>
                            </td>
                            <td class="p-7">
                                <div class="flex flex-col items-center justify-center gap-8">
                                    <a class="h-10 w-10" href="https://maps.app.goo.gl/fHsLNZakwGxQQQNXA">
                                        <img class="h-10 w-10" src="/Google_Maps_icon.svg" alt="Google Maps Link ASK Eichkogel"/>
                                    </a>
                                    <br/>
                                    <a class="h-10 w-10" href="https://maps.app.goo.gl/jG2TJLSkMzMmeJ1EA">
                                        <img class="h-10 w-10" src="/Google_Maps_icon.svg" alt="Google Maps Link ÖTB"/>
                                    </a>
                                    <br/>
                                    <a class="h-10 w-10" href="https://maps.app.goo.gl/5YXVKLuCiSYmGmfz6">
                                        <img class="h-10 w-10" src="/Google_Maps_icon.svg" alt="Google Maps Link SEV Isovolta"/>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</Layout>
