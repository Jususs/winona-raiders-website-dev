---
import "../styles/global.css";
import Footer  from '../components/Footer.astro';

const currentPath = Astro.url.pathname;

const navLinks = [
    { label: 'Home', href: "/winona-raiders-website-dev/" },
    { label: 'Training', href: "/winona-raiders-website-dev/training" },
    { label: 'Juniors', href: "/winona-raiders-website-dev/juniors" },
    { label: 'Impressum', href: "/winona-raiders-website-dev/impressum" }
];
---

<!doctype html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" />
        <link rel="icon" href="/favicon.ico" />
        <title>Winona Raiders</title>
    </head>
    <body class="flex flex-col min-h-screen">
    <div class="bg-[#333333] text-white">
        <div class="flex flex-row justify-center items-center">

            <h1 class="ml-6 mt-1 mb-3 text-center uppercase text-3xl font-raiders font-medium">Ultimate Frisbee MÃ¶dling</h1>

            <div class="flex ml-6 mt-1 mb-3 items-center">
                <a class="h-10 w-10 mx-2" href="https://www.instagram.com/winona_raiders/">
                    <img width={40} height={40} loading="eager" src="/instagram_logo.png" alt="instagram link"/>
                </a>
            </div>
        </div>

        <nav class="flex w-full items-center justify-around text-center uppercase text-[0.9rem] font-raiders">
            {navLinks.map(({ label, href }) => (
                <a href={href} class={`flex-1 p-3 hover:text-white ${currentPath === href ? 'underline underline-offset-5 text-white' : 'text-gray-400'}`}>
                    { label }
                </a>
            ))}
        </nav>
    </div>
        <main class="flex flex-col grow">
            <slot />
        </main>
        <Footer />
    </body>
</html>